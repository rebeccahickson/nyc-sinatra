<h1>Create a new Figure</h1>

<form action="/figures" method="POST">

<p><label for="figure_name">Name: </label><input type="text" name="figure[name]" id="figure_name"></p>

<h4>Titles: </h4>
<% @titles.each do |title|%>
<input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input><br />
<%end%>

<h3>Create New Title:</h3>
<label for="title_name">Title Name: </label><input type="text" name="title[name]" id="new_title">

<h4>Landmarks:</h4>
<% @landmarks.each do |landmark|%>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input><br />
<%end%>

<h3>Create New Landmark:</h3>
<p><label for="landmark_name">Landmark Name: </label><input type="text" name="landmark[name]" id="new_landmark"></p>
<p><label for="landmark_year">Landmark Year: </label><input type="text" name="landmark[year]" id="new_landmark_year"></p>
<input type="submit" id="submit" value="Create New Figure">

</form>
